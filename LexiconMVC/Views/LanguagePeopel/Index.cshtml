@model List<Language>
<div><a asp-action="AddLanguageToPerson" asp-route-id=@ViewBag.PersonId class="btn btn-primary">Add a new</a></div>
    @if(Model.Count() != 0)
    {
        <h1>Person speaks @ViewBag.Name</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td> <a asp-action="RemoveFromPerson" class="btn btn-danger" asp-route-id=@ViewBag.PersonId asp-route-langid=@item.Id>Remove language</a> </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
    <h2>No language in @ViewBag.Name name</h2>
    }