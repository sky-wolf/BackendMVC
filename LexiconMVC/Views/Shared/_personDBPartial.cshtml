@model PersonDB
<div class="row">
    <div class="col-4">
        @Model.Id
    </div>
    <div class="col-2">
        @Model.Name
    </div>
    <div class="col-2">
        @Model.PhoneNumber
    </div>
    <div class="col-2">
        @Model.City
    </div>
    <div class="col-2">
        <a asp-controller="LanguagePeopel" asp-action="Index" class="btn btn-primary" asp-route-id=@Model.Id>Language</a>
    </div>
</div>
