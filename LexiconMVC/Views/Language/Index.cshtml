@model List<Language>


<h1>List of Language</h1>
<div><a asp-action="Create" class="btn btn-primary">Add a new language</a></div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var language in Model)
            {
            <tr>
                <th>@language.Name</th>
                <td>
                    <a asp-controller="LanguagePeopel" asp-action="Index" class="btn btn-primary" asp-route-id=@language.Id>Peopel</a>
                    <a asp-action="Delete" asp-route-id=@language.Id class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>